<style>
	footer {
		margin-top: 40px;
		bottom: 0;
		width: 100%;
		height: 50px;
		display: flex;
		align-items: center;
		justify-content: center;
		background-color: #f2f2f2;
	}
	.copyright-text {
		text-align: left;
		font-weight: lighter;
		font-size: smaller;
		padding-right: 10px;
	}
	.icon-text {
		font-weight: lighter;
		font-size: small;
		text-decoration: none;
	}
	.icon {
		padding-left: 20px;
		width: 20px;
		height: 20px;
	}
	.icon a {
		color: black;
		text-decoration: none;
	}

